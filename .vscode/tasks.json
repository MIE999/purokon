{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall",
        "-fsanitize=undefined",
        "-D_GLIBCXX_DEBUG",
        "-std=c++17",
        "-g",
        "-o",
        "exec",
        "${fileDirname}/${fileBasenameNoExtension}.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
